    {{ page.metafields.global.product_recomended.value }}
    <pre>
       {{ page.metafields.global.product_recomended.value | json }}
    </pre>
   <br>
    <a href="{{ page.metafields.global.product_recomended.value.url }}" target="_blank">
      {{ page.metafields.global.product_recomended.value.title }} == {{ page.metafields.global.product_recomended.value.price | money_with_currency }}
